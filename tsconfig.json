{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "target": "ESNext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".github",
    "node_modules",
    "**/src/**/*.spec.ts",
    "example",
    "dist"
  ]
}